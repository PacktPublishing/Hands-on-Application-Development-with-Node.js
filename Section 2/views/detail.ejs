<html lang="en">
<head>
    <% include ./partials/header %>
</head>
<body class="container">

<main>
    <div class="jumbotron">
        <h1><%= title %>:</h1>
        <ul>
            <% answers.forEach( (q, index) => { %>
                <li><%= q.answer %> - <%= q.author %></li>
            <% }) %>
        </ul>
        <hr />
        <form action="/answering/<%= index %>" method="post">
            Author:<br>
            <input type="text" name="author" value="Mickey"><br>
            Answer:<br>
            <textarea rows="4" cols="50" name="answer">
            Enter text here...</textarea> <br>
            <input type="submit" value="Submit">
        </form>
    </div>
</main>
<% include ./partials/footer %>
</body>
</html>